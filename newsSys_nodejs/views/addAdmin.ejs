<%- include headerAdmin%>
<%- include leftAdmin%>
<div class="col-xs-10">
    <div class="content">
        <div class="item">
            <div class="item-title">新闻添加</div>

            <% if (error) { %>
            <div class="message"><%= error %> </div>
            <% } %>
            <div class="panel panel-default addNews-panel">
                <div class="panel-body">
                    <form class="form-horizontal" method="post">
                        <div class="form-group">
                            <label for="category" class="col-sm-2 control-label">新闻分类：</label>
                            <div class="col-sm-7">
                                <input type="text" name="category" class="form-control" id="category">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="title" class="col-sm-2 control-label">新闻标题：</label>
                            <div class="col-sm-7">
                                <input type="text" name="title" class="form-control" id="title">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="label" class="col-sm-2 control-label">新闻标签：</label>
                            <div class="col-sm-4">
                                <input type="text" name="label" class="form-control" id="label">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="img" class="col-sm-2 control-label">新闻图片：</label>
                            <div class="col-sm-4">
                                <input type="text" name="img" class="form-control" id="img" value="/images/">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-warning">添加新闻</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
<%- include footerAdmin%>
